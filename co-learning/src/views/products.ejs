<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <h1>Esto son todos los productos</h1>
    <% products.forEach(product => { %>
    <div>
      <h2><%= product.name %></h2>
      <p><a href="/products/<%= product.id%>"><%= product.description %></a></p>
    </div>
    <% }) %>
  </body>
</html>
